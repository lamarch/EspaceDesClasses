@model MaClassePA.Models.MatiereModel

@{
    ViewData["Title"] = "Editer une matière";
    var back_link_classe = $"/classes?id={Model.ClasseId}";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form asp-action="Editer" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClasseId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nom" class="control-label"></label>
        <input asp-for="Nom" type="text" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a href=@back_link_classe class="btn btn-primary"><i class="bi bi-arrow-left-circle"></i> Annuler</a>
        <input type="submit" value="Editer" class="btn btn-primary" />
    </div>
</form>