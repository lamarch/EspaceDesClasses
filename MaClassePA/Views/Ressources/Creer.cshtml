@model MaClassePA.Models.RessourceModel

@{ViewData["Title"] = "Créer une ressource";}

<h1>@ViewData["Title"]</h1>
<hr />

<form asp-action="Creer" method="post">
    <input type="hidden" asp-for="Matiere.Id" name="mid" />
    <div class="form-group">
        <label asp-for="Nom" class="control-label"></label>
        <input asp-for="Nom" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contenu" class="control-label"></label>
        <textarea asp-for="Contenu" class="form-control" type="text" placeholder="Le contenu du cours"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
</form>
